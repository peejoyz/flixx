<%- include ("../layouts/homeHeader") %>

    <!-- <div class="container my-4"> -->
         <!--  ************************* Page Title Starts Here ************************** -->
        <div class="page-nav no-margin row">
            <div class="container">
                <div class="row">
                    <h2>Subscribed Channels</h2>
                    <ul>
                        <li> <a href="/"><i class="fas fa-home"></i> Home</a></li>
                        <li><i class="fas fa-angle-double-right"></i> You have subscribed to <b style="color: #cc1821;"><%= user.subscriptions.length %> </b>- channel </li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="container-fluid">
            <div class="container">
                <div class="row video-title no-margin">
                    <h6>
                        <i class="fas fa-book"></i>
                        Subscribed Channels
                    </h6>
                </div>
                <div class="video-row row">
                    <% if(user.subscriptions.length === 0) { %>
                        <p style="font-size: 1.3em;">You have no subscribed channel.</p>
                    <% } else { %>
                        <%
                            user.subscriptions = user.subscriptions.reverse();
                            user.subscriptions.forEach(function(channel) {
                        %>
                            <div class="col-md-6 col-lg-4">
                                <div class="video-card">
                                    <img src="/<%= baseUrl + channel.image %>" onerror="this.src='https://via.placeholder.com/1900x700'" alt="">
        
                                    <div class="row details no-margin">
                                        
                                        <!-- <span style="font-size: 14px; font-weight: normal; float: right; position: relative; top: 7px;"><%= channel.subscribers %> Subscribers </span>   -->
                                        <div class="col-md-6 col-6 no-padding left">
                                            <!-- <i class="far fa-eye"></i>
                                            <span>3,241,234</span> -->
                                            <h6 style="font-size: 1.4em; font-weight: 700; color: #cc1821;"><%= channel.name %></h6>
                                        </div>
                                        <div class="col-md-6 col-6 no-padding right">
        
                                            <i class=""></i>
                                            <!-- <span>3,241,234</span> -->
                                        <span style="font-size: 1.2em; font-weight: normal;"><%= channel.subscribers %> - Subscriber </span>  

                                        </div>
                                    </div>
                                
                                    <div class="card-footer">
                                        <a href="/channel/<%= channel._id %>" class="btn btn-primary">View</a>
                                        <form method="POST" action="/remove-channel-from-subscription" onsubmit="return confirm('Are you sure you want to delete this channel from subscription ?');" style="display: contents;">
                                            <input type="hidden" name="_id" value="<%= channel._id %>">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>  
                        <% }) %>
                    <% } %>
                </div>
            </div>
        </div>
    <!-- </div> -->

    <footer class="py-3" style="background-color: #cc1821; margin-top: 12.2em;">
        <div class="container">
            <p class="m-0 text-center text-white">
                Copyright &copy; Flixx <%= new Date().getFullYear() %>
            </p>
        </div>
    </footer>